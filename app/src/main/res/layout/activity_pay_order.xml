<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="350dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".PayOrder">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Moneytip"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="订单金额" />

        <TextView
            android:id="@+id/showMoney"
            android:textSize="20sp"
            android:layout_width="200dp"
            android:layout_height="30dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/payway"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/payway"
        android:textSize="20sp"
        />

    <RadioGroup
            android:id="@+id/rg_1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信"
                android:textSize="16sp"
                android:textColor="#0f55c5"
                />
            <RadioButton
                android:id="@+id/rb_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝"
                android:layout_below="@id/rb_1"
                android:textSize="16sp"
                android:textColor="#0f55c5"
                />
            <RadioButton
                android:id="@+id/rb_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运动账号"
                android:layout_below="@id/rb_1"
                android:textSize="16sp"
                android:textColor="#0f55c5"
                />
    </RadioGroup>

    <Button
        android:id="@+id/payOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/payOrder"
        android:textSize="20sp"
        android:onClick="code"
        />


</LinearLayout>